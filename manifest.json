{
  "manifest_version": 3,
  "name": "Anormal Kovucu",
  "version": "1.0",
  "description": "Belirli yazarları Normalsozluk'tan engelleme",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://normalsozluk.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
